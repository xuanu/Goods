<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_goods_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/goods_ex"
            android:transitionName="@string/tran_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="青柠"
                android:textColor="#000"
                android:textSize="16sp"
                android:transitionName="@string/tran_title" />

            <TextView
                android:id="@+id/item_des_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="新鲜水果北京红颜青柠净重1.5kg礼盒装"
                android:textColor="#666"
                android:textSize="14sp"
                android:transitionName="@string/tran_des" />

            <TextView
                android:id="@+id/item_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:text="￥18.8"
                android:textColor="@color/color_price"
                android:textSize="18sp"
                android:transitionName="@string/tran_price" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>